@model MakePaymentViewModel

@{
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}
<h2>Make a Payment to @Model.ChildName</h2>
<p>@Html.ValidationSummary()</p>
<div>
    @{ Html.BeginForm(); }
    @Html.HiddenFor(x => x.ChildId)
    @Html.HiddenFor(x => x.ChildName)
    <table>
        <tr>
            <td><label for="Description">Payment Description</label></td>
            <td>@Html.TextBoxFor(x => x.Description)</td>
        </tr>
        <tr>
            <td><label for="Amount">Amount</label></td>
            <td>@Html.TextBoxFor(x => x.Amount)</td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td><input type="submit" value="Make Payment" /></td>
        </tr>
    </table>
    @{ Html.EndForm(); }
</div>
