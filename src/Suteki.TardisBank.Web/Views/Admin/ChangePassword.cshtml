@model Suteki.TardisBank.ViewModel.ChangePasswordViewModel

@{
    View.Title = "Change Password";
}

@{
    Layout = "~/Views/Shared/SiteLayout.cshtml";
}

<h2>This will change your password.</h2>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(excludePropertyErrors: true, message: "Password change was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Account Information</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.OldPassword, "Old password")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.NewPassword, "New password")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.NewPasswordRepeat, "New password again")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.NewPasswordRepeat)
                @Html.ValidationMessageFor(m => m.NewPasswordRepeat)
            </div>

            <p>
                <input type="submit" value="Change Password" />
            </p>
        </fieldset>
    </div>
}
